{
  "name": "pi-maintainer",
  "version": "1.0.0",
  "bin": "dist/main.js",
  "license": "MIT",
  "scripts": {
    "start": "node -r ts-node/register ./src/main.ts",
    "_build:ts": "tsc",
    "_build:pkg:linux": "pkg -t latest-linux-armv7 ./ --output dist/pi-maintainer",
    "_build:pkg:win": "pkg -t latest-win-x64 ./ --output dist/pi-maintainer.exe",
    "build:linux": "run-s _build:ts _build:pkg:linux",
    "build:win": "run-s _build:ts _build:pkg:win"
  },
  "pkg": {
    "output": "dist/",
    "assets": [
      "./node_modules/@types",
      "./node_modules/typescript/lib/*.d.ts",
      "src/**/*.ts",
			"./tsconfig.json",
			"./.env"
    ]
  },
  "dependencies": {
    "@types/bytes": "^3.1.0",
    "@types/debug": "^4.1.5",
    "@types/dotenv": "^8.2.0",
    "@types/koa": "^2.11.0",
    "@types/koa-router": "^7.0.42",
    "@types/node": "^13.1.4",
    "@types/ramda": "^0.26.39",
    "ansi_up": "^4.0.4",
    "axios": "^0.19.0",
    "bytes": "^3.1.0",
    "debug": "^4.1.1",
    "dotenv": "^8.2.0",
    "execa": "^4.0.0",
    "koa": "^2.11.0",
    "koa-router": "^7.4.0",
    "public-ip": "^4.0.0",
    "ramda": "^0.26.1",
    "systeminformation": "^4.17.2",
    "ts-node": "^8.5.4",
    "typescript": "^3.7.4"
  },
  "devDependencies": {
    "npm-run-all": "^4.1.5",
    "pkg": "^4.4.2"
  }
}
